// fade
.fade-enter-active
  transition opacity 0.5s

.fade-leave-active
  transition opacity 0.3s

.fade-enter, .fade-leave-to
  opacity 0

// fade - slow
.fade-slow-enter-active
  transition opacity 4s

.fade-slow-leave-active
  transition opacity 1.3s ease

.fade-slow-enter, .fade-slow-leave-to
  opacity 0